<% layout("/layouts/boilerplate") -%>
    <div class="row">
        <h1 class="offset-3">Sign Up for Wonderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <lable for="username" class="form-label">Username</lable>
                    <input name="username" id="username" type="text" class="form-control shadow" required />
                    <div class="valid-feedback">Looks good!</div>

                    <lable for="email" class="form-label">Email Address:</lable>
                    <input name="email" id="email" type="email" class="form-control shadow" required />

                    <lable for="password" class="form-label">Password:</lable>
                    <input name="password" id="password" type="password" class="form-control shadow" required />
                </div>
                <button class="btn btn-success">Sign Up</button>
            </form>
        </div>
    </div>