<% layout("/layouts/boilerplate") -%>



<h2 class="text-center mt-4"> <%= category %></h2>

<div class="container mt-4">
  <div class="row">
    <% allListing.forEach(listing => { %>
      <div class="col-md-4 mb-4">
        <a href="/listings/<%= listing._id %>">
        <div class="card h-100">
                  <img src="<%= listing.image.url %>" class="card-img-top img-fluid"
                    style="height: 18rem; object-fit: cover;">

                  <div class="card-body p-3">
                    <h5 class="card-title text-truncate">
                      <%= listing.title %>
                    </h5>
                    <p class="mb-1"><b>&#8377; <%= listing.price.toLocaleString('en-IN') %> /night</b>
                    </p>

                  </div>
                </div>
      </a>
      </div>
    <% }) %>
  </div>
</div>

